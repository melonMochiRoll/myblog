{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop" : true,
    "strict": true,
    "allowSyntheticDefaultImports" : true,
    "baseUrl": ".",
    "paths": {
      "Components/*": ["src/components/*"],
      "Containers/*": ["src/containers/*"],
      "Hooks/*": ["src/hooks/*"],
      "Pages/*": ["src/pages/*"],
      "Styles/*": ["src/styles/*"],
    },
  }
}